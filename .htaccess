# LifeCompass Uni — serve built app from dist/
RewriteEngine On

# API requests → pass through to Passenger (Node.js) as-is
RewriteCond %{REQUEST_URI} ^/api/ [NC]
RewriteRule ^ - [L]

# Everything else → serve from dist/ subdirectory
RewriteCond %{REQUEST_URI} !^/dist/
RewriteRule ^(.*)$ dist/$1 [L]
